PORT=8000

# Gemini API Key (Get from https://makersuite.google.com/app/apikey)
KEY=your_gemini_api_key_here

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/cosmo-hack

# JWT Secret for authentication (Use a strong random string - min 32 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Twilio Configuration (Get from https://www.twilio.com/console)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# TwiML Server URL (Your server's public URL for Twilio callbacks)
TWIML_BASE_URL=https://your-server-domain.com

# Escalation Configuration (1-5 severity threshold)
ESCALATION_SEVERITY_THRESHOLD=4

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173
